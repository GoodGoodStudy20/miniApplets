<view class="songContainer {{isPlay?'isPlaying':''}}">
  <view class="name">{{songObj.ar[0].name}}</view>
  <view class="qiuqiu"></view>
  <image src="/static/images/song/needle.png" class="needle"></image>
  <view class="discContainer">
    <image src="/static/images/song/disc.png" class="disc"></image>
    <image src="{{songObj.al.picUrl}}" class="songImg"></image>
  </view>
  <!-- 底部播放选项区域 -->
  <view class="musicControl">
    <text class="iconfont icon-iconsMusicyemianbofangmoshiShuffle"></text>
    <text class="iconfont icon-shangyishou" id="pre"></text>
    <text class="iconfont big {{isPlay?'icon-zanting':'icon-bofang'}}" bindtap="handlePlay"></text>
    <text class="iconfont icon-next" id="next"></text>
    <text class="iconfont icon-iconsMusicyemianbofangmoshiPlayList"></text>
  </view>
</view>