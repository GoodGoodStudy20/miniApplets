.swiperItem image {
  width: 100%;
}

.navContainer {
  display: flex;
  width: 100%;
}

.navContainer .iconfont {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: rgb(240, 19, 19);
  text-align: center;
  color: white;
  margin: 20rpx 0;
  font-size: 50rpx;
  border-radius: 50%;
}

.navContainer .navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-grow: 1;
}

.navItemText {
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.recommendContainer {
  margin: 0 20rpx;
}

/* 滑动图片 */

.SlidePicture {
  display: flex;
  height: 320rpx;
  
}

.SlidePicture .SlidePictureItem{
width: 200rpx;
height: 200rpx;
flex-shrink: 0;
margin: 0 10rpx;
}

.SlidePicture .SlidePictureItem .picture{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.SlidePicture .prctureContent{
display: -webkit-box;
/* 文本行排列方向 */
-webkit-box-orient: vertical;
/* 设置几行之后出现溢出 */
-webkit-line-clamp:2;
/* 超出宽度隐藏 */
overflow: hidden;
height: 100rpx;
}

/* 排行榜 */
.rankContainer{
  margin: 0 20rpx;
}
.topSwiper{
  height: 400rpx;
}
.rankContainer .rankTitle{
  font-size: 28rpx;
}
.rankContainer .rankItem{
  height: 100rpx;
